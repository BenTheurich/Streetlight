{
  "name": "streetlight",
  "private": true,
  "version": "1.0.0",
  "engines": {
    "node": ">=20"
  },
  "packageManager": "pnpm@8.15.4",
  "scripts": {
    "dev": "concurrently -k -n web,api -c auto \"pnpm --filter web dev\" \"pnpm --filter api dev\"",
    "build": "pnpm -r build",
    "lint": "pnpm -r lint",
    "test": "pnpm -r test",
    "typecheck": "pnpm -r typecheck"
  },
  "devDependencies": {
    "concurrently": "^8.2.2",
    "eslint": "^8.57.0",
    "@typescript-eslint/eslint-plugin": "^7.18.0",
    "@typescript-eslint/parser": "^7.18.0",
    "prettier": "^3.3.3"
  }
}